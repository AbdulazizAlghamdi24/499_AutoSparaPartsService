<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/create_order_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/createorder" />

    <TextView
        android:id="@+id/create_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_order_btn"
        android:layout_alignStart="@id/create_order_btn"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="Create Order"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/show_order_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ongoing"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/show_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_order_btn"
        android:layout_alignEnd="@id/show_order_btn"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="22dp"
        android:text="Ongoing Order"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Api_recognizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_nav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="take a photo"
        android:textColor="@color/white"
        android:background="@drawable/button_background" />




        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/purple_500"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true" />

</RelativeLayout>